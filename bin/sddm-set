#!/bin/bash

SDDM_DIR="/usr/share/sddm/themes"
LINK_PATH="/usr/share/sddm/themes/current_sddm"

selected=$(find "$SDDM_DIR" -maxdepth 1 -mindepth 1 -type d -exec basename {} \; | walker --dmenu -p "Select SDDM Theme")

if [ -n "$selected" ]; then
  sudo ln -nsf "$SDDM_DIR/$selected" "$LINK_PATH"
  echo "SDDM Theme switched to $selected"
  echo "U can close the window now (CTRL + C)"
fi
