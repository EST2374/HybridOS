#
# ~/.bashrc
#

# If not running interactively, don't do anything
# ~/.bashrc - Korrigierte Version ohne Fehler

# Falls nicht interaktiv, beenden
[[ $- != *i* ]] && return

# --- 1. CASE-INSENSITIVE TAB COMPLETION (Ersetzt die .inputrc) ---
bind "set completion-ignore-case on"
bind "set show-all-if-ambiguous on"

# --- 2. SHELL OPTIONEN & HISTORY ---
shopt -s histappend
shopt -s cdspell      # Korrigiert 'cd downloads' zu 'cd Downloads'
HISTCONTROL=ignoreboth
HISTSIZE=32768
HISTFILESIZE="${HISTSIZE}"
set +h # Wichtig fÃ¼r mise

# Bash-Completion laden
if [[ ! -v BASH_COMPLETION_VERSINFO && -f /usr/share/bash-completion/bash_completion ]]; then
  source /usr/share/bash-completion/bash_completion
fi

# --- 3. ALIASE & NAVIGATION ---
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

if command -v eza &> /dev/null; then
  alias ls='eza -lh --group-directories-first --icons=auto'
  alias lsa='ls -a'
  alias lt='eza --tree --level=2 --long --icons --git'
fi

alias ff="fzf --preview 'bat --style=numbers --color=always {}'"
alias g='git'
alias d='docker'
alias r='rails'

# --- 4. ZOXIDE INITIALISIERUNG & CD-LOGIK ---
if command -v zoxide &> /dev/null; then
  eval "$(zoxide init bash)"
  
  alias cd="zd"
  zd() {
    if [ $# -eq 0 ]; then
      builtin cd ~ && return
    elif [ -d "$1" ]; then
      builtin cd "$1"
    else
      # Nutzt zoxide Datenbank (OHNE ICON)
      z "$@" && pwd || echo "Error: Directory not found"
    fi
  }
fi

# --- 5. WEITERE TOOLS & FUNKTIONEN ---
command -v mise &> /dev/null && eval "$(mise activate bash)"
command -v starship &> /dev/null && eval "$(starship init bash)"

# KORRIGIERTE FUNKTION (Semikolon vor } entfernt)
open() { xdg-open "$@" >/dev/null 2>&1 & }

n() { if [ "$#" -eq 0 ]; then nvim .; else nvim "$@"; fi; }

# --- 6. START ---
fastfetch
