#!/bin/bash

if [ -z "$1" ]; then
    echo "Usage: $0 <flatpak-app-id>"
    echo "Example: $0 org.gnome.Aisleriot"
    exit 1
fi

APP_ID=$1

echo "Removing $APP_ID..."

flatpak uninstall "$APP_ID" -y --delete-data

echo "Cleaning up unused dependencies..."
flatpak uninstall --unused -y

echo "Done."
